# Maintainer: Constantin Schomburg <me at xconstruct dot net>
# Contributor: Kaspar Bumke <kaspar.bumke@gmail.com>
pkgname=virtualgl-bin
_srcname=VirtualGL
pkgver=2.2.1
pkgrel=1
pkgdesc="Redirects 3D commands from an OpenGL application onto a server-side 3D graphics card."
arch=('i686' 'x86_64')
url="http://virtualgl.org"
license=('GPL')
depends=()
makedepends=(rpmextract)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()

case "$CARCH" in
	i686)
		_bldarch="i386"
		md5sums=('a8ac763cd38ca4a2a1ea63344913c189');;
	x86_64)
		_bldarch="x86_64"
		md5sums=('4a22657764d8ce0fad616ff63b648c44');;
esac

install=
source=(http://downloads.sourceforge.net/project/virtualgl/VirtualGL/$pkgver/$_srcname-$pkgver.$_bldarch.rpm)
noextract=($_srcname-$pkgver.$_bldarch.rpm)

build() {
  cd "$srcdir"
  rpmextract.sh $_srcname-$pkgver.$_bldarch.rpm
  mv usr opt $pkgdir
}

